#!/bin/bash

echo -n "vulnerable:2> "
sleep 1
echo "echo '' | base64 -d > ./stuff/index.html" | pv -qL 10 
echo '' | base64 -d > ./stuff/index.html
echo -n "vulnerable:2> "
sleep 1
echo "/usr/bin/copy ./stuff/index.html /root/html/index.html" | pv -qL 10 
/usr/bin/copy ./stuff/index.html /root/html/index.html
echo -n "vulnerable:2> "
sleep 1
echo "cat ./stuff/index.html" | pv -qL 10 
cat ./stuff/index.html
exit
